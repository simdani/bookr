<% include ../partials/head %>

<a href="/books" class="btn btn-secondary mb-3">Back</a>

<div class="card card-body home-color">
  <h3>Add your book</h3>
  <form action="/books" method="POST">
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" class="form-control" name="title" placeholder="enter book title" required>
    </div>
    <div class="form-group">
      <label for="author">Author</label>
      <input type="text" class="form-control" name="author" placeholder="enter author" required>
    </div>
    <div class="form-group">
      <label for="status">Select book status</label>
      <select class="form-control col-md-4" name="status">
        <option value="not started" selected>not started</option>
        <option value="reading">reading</option>
        <option value="completed">completed</option>
      </select>
    </div>
    <div class="form-group">
        <label for="currentPage">Current page (default 0)</label>
        <input type="number" class="form-control" placeholder="enter current page you are reading" name="currentPage">
    </div>
    <div class="form-group">
      <label for="pages">Total pages</label>
      <input type="number" class="form-control" placeholder="enter total book pages" name="pages" required>
    </div>
    <div class="form-group">
      <label for="details">Details</label>
      <textarea class="form-control" name="details" placeholder="enter books details/description" required></textarea>
    </div>
    <button type="submit" class="btn btn-secondary">Add</button>
  </form>
</div>

<% include ../partials/footer %>