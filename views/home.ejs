<% include ./partials/head %>

<div class="text-center card home-color">
  <div class="card-body col-md-6 mx-auto">
    <h1>Track your books and share reviews with others</h1>
    <hr/>
    <h4 class="text-center">Register new account or <a href="/users/login">Login</a>.</h4>
    <div id="user-register">
      <form action="/users/register" method="post">
        <div class="form-group">
          <label for="email"><strong>Email</strong>:</label>
          <input type="email" class="form-control" name="email" placeholder="enter email address" value="<%= (!!locals.email)?email:'' %>" required>
        </div>
        <div class="form-group">
          <label for="name"><strong>Name</strong>:</label>
          <input type="text" class="form-control" name="name" placeholder="enter your name" value="<%= (!!locals.name)?name:'' %>" required>
        </div>
        <div class="form-group">
          <label for="password"><strong>Password</strong>:</label>
          <input type="password" class="form-control" placeholder="enter your password" name="password" value="<%= (!!locals.password)?password:'' %>" required>
        </div>
        <div class="form-group">
          <label for="password2"><strong>Confirm Password</strong>:</label>
          <input type="password" class="form-control" placeholder="confirm your password" name="password2" value="<%= (!!locals.password2)?password2:'' %>" required>
        </div>
          <button type="submit" class="btn btn-dark btn-block dark-brown-color">Register</button>
      </form>
    </div>
  </div>
</div>

<% include ./partials/footer %>